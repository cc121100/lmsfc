    <!-- Freemarker配置 -->
    <bean id="freemarkerConfig"
          class="com.cc.lmsfc.admin.shirotag.ShiroTagFreeMarkerConfigurer"> <!--for use shiro tag in freemarker-->
        <property name="templateLoaderPath" value="/WEB-INF/view/" />
        <property name="freemarkerSettings">
            <props>
                <prop key="template_update_delay">0</prop>
                <prop key="default_encoding">UTF-8</prop>
                <prop key="number_format">0.##########</prop>
                <prop key="datetime_format">yyyy-MM-dd HH:mm:ss</prop>
                <prop key="classic_compatible">true</prop>
                <prop key="template_exception_handler">ignore</prop>
            </props>
        </property>
    </bean>

    <import resource="spring-shiro.xml"/>

    <!-- override auditorAware defined in spring-commom-->
    <bean id="auditorAware" class="com.cc.lmsfc.admin.audit.WebAuditorAwareImpl" />

</beans>
